<div class="container">
  <header class="header">
    <div class="logo">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path d="M13.5 4.06c0-1.336-1.616-2.005-2.56-1.06l-4.5 4.5H4.508c-1.141 0-2.318.664-2.66 1.805l-.07.234a.99.99 0 00.67 1.258l2.028.61c.42.126.866.446.866.96 0 .583-.568.995-.973.995-.44 0-.825-.337-.954-.75l-.271-.861a2.49 2.49 0 00-2.352-1.78H.75a.75.75 0 00-.75.75v5.093c0 .415.336.75.75.75H2.4c.596 0 1.15-.316 1.455-.83.303-.51.341-1.125.101-1.67-.202-.456-.052-.969.362-1.18.423-.217.925-.098 1.147.337l.42 1.4c.3 1 .6 1.5 1.5 1.5h4.118l4.5 4.5c.944.945 2.56.276 2.56-1.06V4.06zM18.75 7.5a.75.75 0 00-1.5 0 5.25 5.25 0 010 9 .75.75 0 001.5 0 6.75 6.75 0 000-11.75z" />
        <path d="M21 3.75a.75.75 0 00-1.5 0 8.25 8.25 0 010 16.5.75.75 0 001.5 0 9.75 9.75 0 000-16.5z" />
      </svg>
      <h1>VoiceGen</h1>
    </div>
    <div class="status-indicator">
      <span class="status-dot"></span>
      System Ready
    </div>
  </header>

  <main class="main-content">
    <section class="generator-section">
      <div class="card generator-card">
        <h2>Generate New Audio</h2>
        <form id="generate-form">
          <div class="form-group">
            <label for="text-input">Enter Text</label>
            <textarea id="text-input" name="text" placeholder="Type something amazing..." rows="4" required></textarea>
          </div>
          <div class="form-group">
            <label for="voice-select">Select Voice</label>
            <div class="select-wrapper">
              <select id="voice-select" name="voice_id" class="form-control">
                <option value="21m00Tcm4TlvDq8ikWAM">Rachel (Female, American)</option>
                <option value="AZnzlk1XvdvUeBnXmlld">Domi (Female, American)</option>
                <option value="EXAVITQu4vr4xnSDxMaL">Bella (Female, American)</option>
                <option value="ErXwobaYiN019PkySvjV">Antoni (Male, American)</option>
                <option value="MF3mGyEYCl7XYWbV9V6O">Elli (Female, American)</option>
                <option value="TxGEqnHWrfWFTfGW9XjX">Josh (Male, American)</option>
              </select>
            </div>
          </div>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary" id="generate-btn">
              <span>Generate Voice</span>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
              </svg>
            </button>
          </div>
        </form>
      </div>
    </section>

    <section class="history-section">
      <div class="section-header">
        <h2>Recent Generations</h2>
        <button id="refresh-btn" class="btn btn-icon" title="Refresh list">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
          </svg>
        </button>
      </div>
      
      <div class="generations-grid" id="generations-list">
        <% @audio_generations.each do |generation| %>
          <%= render partial: 'generation_card', locals: { generation: generation } %>
        <% end %>
      </div>
    </section>
  </main>
</div>

<!-- Template for new items -->
<template id="generation-card-template">
  <article class="generation-card history-card" data-id="">
    <div class="card-header">
      <span class="status-badge"></span>
      <span class="timestamp">Just now</span>
    </div>
    <div class="card-body">
      <p class="text-preview"></p>
    </div>
    <div class="card-footer">
      <div class="audio-controls hidden">
        <audio controls preload="none" class="audio-player"></audio>
      </div>
      <div class="processing-indicator">
        <div class="spinner"></div>
        <span>Generating...</span>
      </div>
    </div>
  </article>
</template>
